#include<iostream>
using namespace std;


float add(float a, float b){

    float z;          //local variable
    z= a+b;
    return z;

}

//two remember we have 2 funcs of sum of 2 diff parameter we should use 2 diff name so that in long code it can help during function call
int add2(int a, int b){

    float z;          //local variable
    z= a+b;
    return z;

}

int add3(int a, int b, int c){

    float z;          //local variable
    z= a+b+c;
    return z;

}


// we used same name for add2 and add3; thats a function overloading

int main(){

  cout<<add2(2,3)<<endl;
  cout<<add3(2,3,4)<<endl;
  cout<<add(2.4f,7.9f)<<endl;
  return 0;
}
